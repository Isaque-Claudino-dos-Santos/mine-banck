{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "Node16",
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "files": ["src/index.ts", "environment.d.ts"],
  "include": ["src/**/*.ts"]
}
