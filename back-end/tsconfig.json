{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "ES6",
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules"],
  "files": ["src/index.ts", "environment.d.ts"],
  "include": ["*.ts", "src/*.ts", "src/**/*.ts"]
}
